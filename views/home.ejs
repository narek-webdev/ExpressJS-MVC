<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>

        <div class="container mt-5">
            <a href="/create">
                <button type="button" class="btn btn-primary mb-3">Create <i class="bi bi-plus"></i></button>
            </a>

            <div class="alert alert-success" role="alert" id="delete-success-alert">
                <i class="bi bi-check-circle"></i> Item deleted successfuly
            </div>

            <% if (statusCode) { %>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th scope="col">Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data.length) { %>
                            <% data.map(item => { %>
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="checkbox" id="flexCheckDefault" />
                                    </td>

                                    <td><%= item.title %></td>
        
                                    <td>
                                        <a href="/<%= item.id %>">
                                            <button type="button" class="btn btn-primary">
                                                <i class="bi bi-eye"></i> See More
                                            </button>
                                        </a>
                                    </td>
        
                                    <td>
                                        <a href="/edit/<%= item.id %>">
                                            <button type="button" class="btn btn-light">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                        </a>
                                    </td>
        
                                    <td>
                                        <button type="submit" class="btn btn-danger" onclick="deleteItem(this, '<%= item.id %>')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <td>No Items Yet!</td>
                        <% } %>
                    </tbody>
                </table>
            <% } else { %>
                <h1>Something went wrong, please refresh the page!</h1>
            <% } %>
        </div>

        <script src="../public/js/items.js"></script>
</body>
</html>